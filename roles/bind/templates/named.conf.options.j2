acl corpnets { 
  {% for n in network_localhost -%}
  {{ n }}; 
  {%- endfor -%} };
options {
  directory "/var/lib/bind";

  allow-query { corpnets; };

  forwarders {
    {% for n in DNS_forwarders %}
    {{ n }};
    {%- endfor %}
  };
};

statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};